<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersoanaFizicaCheltuieliRateActivity">

    <TextView
        android:id="@+id/titlu_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Sectiunea ratelor"
        android:textColor="#331DE5"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_adauga_rata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="          Adauga suma"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/titlu_rate"
        app:layout_constraintTop_toBottomOf="@+id/titlu_rate" />

    <Button
        android:id="@+id/button_adauga_rata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Adauga"
        app:layout_constraintEnd_toEndOf="@+id/number_adauga_rata"
        app:layout_constraintStart_toStartOf="@+id/number_adauga_rata"
        app:layout_constraintTop_toBottomOf="@+id/number_adauga_rata" />

    <EditText
        android:id="@+id/number_suma_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="        Cheltuieli totale"
        android:inputType="none"
        android:editable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/number_adauga_rata"
        app:layout_constraintStart_toStartOf="@+id/number_adauga_rata"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_ultima_rata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="442dp"
        android:ems="10"
        android:hint="   Ultima plata introdusa"
        android:inputType="none"
        android:editable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_informatie_suma_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga suma"
        app:layout_constraintBottom_toTopOf="@+id/number_adauga_rata"
        app:layout_constraintEnd_toEndOf="@+id/number_adauga_rata"
        app:layout_constraintStart_toStartOf="@+id/number_adauga_rata" />

    <TextView
        android:id="@+id/text_informatie_cheltuieli_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheltuieli totale"
        app:layout_constraintBottom_toTopOf="@+id/number_suma_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_informatie_rate_ultima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Ultima plata introdusa"
        app:layout_constraintBottom_toTopOf="@+id/number_ultima_rata"
        app:layout_constraintStart_toStartOf="@+id/number_ultima_rata" />

    <Button
        android:id="@+id/button_reset_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_ultima_rata" />
</androidx.constraintlayout.widget.ConstraintLayout>