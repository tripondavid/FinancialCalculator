<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersoanaFizicaIncasariInvestitiiActivity">

    <TextView
        android:id="@+id/titlu_investitii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="74dp"
        android:text="Sectiunea investitiilor"
        android:textColor="#331DE5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/number_adauga_investitie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_adauga_investitie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="          Introdu suma"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/button_adauga_investitie_persoana_fizica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adauga_investitie_persoana_fizica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="202dp"
        android:text="Adauga"
        app:layout_constraintEnd_toEndOf="@+id/number_adauga_investitie"
        app:layout_constraintStart_toStartOf="@+id/number_adauga_investitie"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_suma_investitie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="275dp"
        android:editable="false"
        android:ems="10"
        android:hint="          Venituri totale"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_adauga_investitie_persoana_fizica"
        app:layout_constraintVertical_bias="0.577" />

    <EditText
        android:id="@+id/number_ultima_investitie"
        android:layout_width="241dp"
        android:layout_height="67dp"
        android:layout_marginBottom="128dp"
        android:editable="false"
        android:ems="10"
        android:hint="   Ultima investitie introdusa"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_informatie_introdu_suma_investitie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Introdu suma"
        app:layout_constraintBottom_toTopOf="@+id/number_adauga_investitie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_informatie_venit_investitie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Venituri totale"
        app:layout_constraintBottom_toTopOf="@+id/number_suma_investitie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_informatie_ultima_investitie_introdusa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="7dp"
        android:text="Ultima investitie introdusa"
        app:layout_constraintBottom_toTopOf="@+id/number_ultima_investitie"
        app:layout_constraintStart_toStartOf="@+id/number_ultima_investitie" />

    <Button
        android:id="@+id/button_reset_investitii_incasari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>